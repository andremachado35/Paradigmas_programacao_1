        emp1 = new Empregado("Joao", 20);
	    emp2 = new Gestor("Rui", 20, 2.2); 
        emp3 = new Motorista("Ze", 20, 1.2, 200);
	    out.println(emp1.getClass().getSimpleName() + " " + emp1.getNome() + " : " + emp1.salario());
